<h1><%= link_to(h("#{issue.tracker.name} ##{issue.id}: #{issue.subject}"), issue_url) %></h1>

<ul>
<% parent_subject = parent_issue_subject(issue) %>
<% unless parent_subject.blank? %><li><%= l(:field_parent_issue) %>: <%=h parent_subject %></li><% end %>
<li><%=l(:field_author)%>: <%=h issue.author %></li>
<li><%=l(:field_status)%>: <%=h issue.status %></li>
<li><%=l(:field_priority)%>: <%=h issue.priority %></li>
<li><%=l(:field_assigned_to)%>: <%=h issue.assigned_to %></li>
<li><%=l(:field_category)%>: <%=h issue.category %></li>
<li><%=l(:field_fixed_version)%>: <%=h issue.fixed_version %></li>
<li><%=l(:label_spent_time)%>: <%=h issue.total_spent_hours > 0 ? issue.total_spent_hours : "-" %></li>
<% issue.custom_field_values.each do |c| %>
  <li><%=h c.custom_field.name %>: <%=h show_value(c) %></li>
<% end %>
</ul>

<%= textilizable(issue, :description, :only_path => false) %>
